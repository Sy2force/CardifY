# Production Environment Variables for Render Deployment
NODE_ENV=production
PORT=10000

# MongoDB Connection (will be provided by Render)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/cardify

# JWT Secret (will be auto-generated by Render)
JWT_SECRET=your-super-secure-jwt-secret-key-for-production

# Frontend URL (Vercel deployment)
CLIENT_URL=https://cardify.vercel.app

# CORS Origins
CORS_ORIGINS=https://cardify.vercel.app,https://www.cardify.vercel.app
