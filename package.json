{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "cardify",
  "version": "1.0.0",
  "description": "Modern multilingual business card platform",
  "main": "index.js",
  "scripts": {
    "start": "node start.js",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "npx playwright test",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "seed": "cd backend && npm run seed",
    "lint": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "audit": "npm audit && cd backend && npm audit && cd ../frontend && npm audit",
    "clean": "rm -rf */node_modules */dist */build .DS_Store",
    "deploy": "npm run build && echo 'Ready for deployment'",
    "playwright:install": "playwright install"
  },
  "keywords": [
    "business-cards",
    "react",
    "nodejs",
    "mongodb",
    "multilingual"
  ],
  "author": "Shay Acoca",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "concurrently": "^8.2.2"
  }
}
