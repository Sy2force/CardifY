{
  "name": "cardify-backend",
  "version": "1.0.0",
  "description": "Cardify Backend API - Production Ready TypeScript Express Server",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --files src/index.ts",
    "build": "npm run clean && tsc --build --verbose",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild:cleanup": "find dist -name '*.js.map' -delete",
    "type-check": "tsc --noEmit --pretty",
    "health": "curl http://localhost:8080/api/health || echo 'Server not running'",
    "lint": "tsc --noEmit",
    "test:build": "npm run build && node dist/index.js --check",
    "render:build": "npm ci && npm run build",
    "render:start": "NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0"
  },
  "keywords": [
    "backend",
    "api",
    "express",
    "typescript",
    "render",
    "production"
  ],
  "license": "MIT"
}
